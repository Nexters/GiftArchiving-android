<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Guide1Fragment">

    <TextView
        android:id="@+id/guide1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_guide_title1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/guide1_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_guide_detail1"
        android:textColor="@color/settingsGray"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/guide1_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:id="@+id/guide1_image"
        android:layout_width="234dp"
        android:layout_height="262dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>